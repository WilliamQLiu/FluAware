<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <ImageView android:layout_gravity="center" android:src="@drawable/icon" android:layout_width="250dp" android:layout_height="250dp" android:id="@+id/ivReturnedPic"></ImageView>
    <ImageButton android:layout_gravity="center" android:layout_width="125dp" android:src="@drawable/icon" android:layout_height="wrap_content" android:id="@+id/ibTakePic"></ImageButton>
    <Button android:layout_gravity="center" android:text="Set Wallpaper" android:id="@+id/bSetWall" android:layout_width="125dp" android:layout_height="wrap_content"></Button>
    
</LinearLayout>
